{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "fileShareName": {
            "type": "string",
            "defaultValue": "sftpfileshare",
            "metadata": {
                "description": "Name of file share to be created"
            }
        },
        "keyVaultName": {
            "type": "string",
            "metadata": {
                "description": "Name of the key vault where user credentials are stored."
            }
        },
        "kvSecretsTagName": {
            "type": "string",
            "metadata": {
                "description": "Name of tag that will be used to query for secrets in the Key Vault."
            }
        },
        "kvSecretsTagValue": {
            "type": "string",
            "metadata": {
                "description": "The value for kvSecretsTagName to query for."
            }
        },
        "managedIdentityResourceId": {
            "type": "string",
            "metadata": {
                "description": "Resource ID of user-assigned managed identity with access to secrets in the 'keyVaultName'."
            }
        },
        "commonStorageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of the storage account in the 'common' resource group where the help-script exists."
            }
        }
    },
    "variables": {
        "sftpContainerName": "sftp-container",
        "sftpInitContainerName": "sftp-init-container",
        "sftpContainerGroupName": "sftp-group",
        "sftpContainerImage": "atmoz/sftp",
        "sftpInitContainerImage": "mcr.microsoft.com/azure-cli",
        "storageAccountName": "[concat('sftpstg', uniqueString(resourceGroup().id))]",
        "containerGroupDNSLabel": "[uniqueString(resourceGroup().id, deployment().name)]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2018-02-01",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "Premium_LRS"
            },
            "kind": "FileStorage",
            "properties": {}
        },
        {
            "type": "Microsoft.Storage/storageAccounts/fileServices/shares",
            "apiVersion": "2019-06-01",
            "name": "[concat(variables('storageAccountName'), '/default/', parameters('fileShareName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
            ]
        },
        {
            "type": "Microsoft.ContainerInstance/containerGroups",
            "name": "[variables('sftpContainerGroupName')]",
            "apiVersion": "2019-12-01",
            "location": "[resourceGroup().location]",
            "identity": {
                "principalId": "",
                "type": "UserAssigned",
                "userAssignedIdentities": { 
                    "[parameters('managedIdentityResourceId')]": {}
                }
            },
            "properties": {
                "containers": [
                    {
                        "name": "[variables('sftpInitContainerName')]",
                        "properties": {
                            "image": "[variables('sftpInitContainerImage')]",
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 1
                                }
                            },
                            "volumeMounts": [
                                {
                                    "name": "user-config",
                                    "mountPath": "/etc/sftp"
                                },
                                {
                                    "name": "setup-vol",
                                    "mountPath": "/etc/setup"
                                }
                            ],
                            "command": [
                                "/bin/sh",
                                "-c",
                                "[concat('/etc/setup/deploy-helper.sh -k ', parameters('keyVaultName'), ' -t ', parameters('kvSecretsTagName'), ' -v ', parameters('kvSecretsTagValue'), ' >> /etc/sftp/users.conf')]"
                            ]
                        }
                    },
                    {
                        "name": "[variables('sftpContainerName')]",
                        "properties": {
                            "image": "[variables('sftpContainerImage')]",
                            "environmentVariables": [],
                            "resources": {
                                "requests": {
                                    "cpu": 1,
                                    "memoryInGB": 1
                                }
                            },
                            "ports": [
                                {
                                    "port": 22
                                }
                            ],
                            "volumeMounts": [
                                {
                                    "name": "user-config",
                                    "mountPath": "/etc/sftp"
                                },
                                {
                                    "name": "setup-vol",
                                    "mountPath": "/etc/setup"
                                },
                                {
                                    "name": "sftp-vol",
                                    "mountPath": "/home"
                                }
                            ],
                            "readinessProbe": { 
                                "exec": {
                                    "command": [
                                        "cat",
                                        "/etc/sftp/users.conf"
                                    ]
                                },
                                "initialDelaySeconds": 10,
                                "periodSeconds": 5
                            }
                        }
                    }
                ],
                "osType": "Linux",
                "ipAddress": {
                    "type": "Public",
                    "ports": [
                        {
                            "protocol": "TCP",
                            "port": 22
                        }
                    ],
                    "dnsNameLabel": "[variables('containerGroupDNSLabel')]"
                },
                "restartPolicy": "Never",
                "volumes": [
                    {
                        "name": "user-config",
                        "emptyDir": {}
                    },
                    {
                        "name": "setup-vol",
                        "azureFile": {
                            "readOnly": true,
                            "shareName": "setup",
                            "storageAccountName": "[parameters('commonStorageAccountName')]",
                            "storageAccountKey": "[TODO]"
                        }
                    },
                    {
                        "name": "sftp-vol",
                        "azureFile": {
                            "readOnly": false,
                            "shareName": "[parameters('fileShareName')]",
                            "storageAccountName": "[variables('storageAccountName')]",
                            "storageAccountKey": "[listKeys(variables('storageAccountName'),'2018-02-01').keys[0].value]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {}
}